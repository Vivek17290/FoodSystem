Subject: [PATCH] Fix navbar alignment and responsive issues

---
 src/main/webapp/css/styles.css | 25 ++++++++++++++++++-------
 1 file changed, 18 insertions(+), 7 deletions(-)

diff --git a/src/main/webapp/css/styles.css b/src/main/webapp/css/styles.css
index a1b2c3d..e4f5a6b 100644
--- a/src/main/webapp/css/styles.css
+++ b/src/main/webapp/css/styles.css
@@ -45,17 +45,28 @@ body {
 
 .navbar {
     background-color: #343a40;
-    padding: 10px 0;
+    padding: 12px 0;
+    display: flex;
+    justify-content: space-between;
+    align-items: center;
 }
 
 .navbar-brand {
     color: #ffffff;
     font-size: 1.5rem;
     font-weight: bold;
+    margin-left: 20px;
 }
 
-.navbar-nav {
-    margin-left: auto;
+.nav-links {
+    display: flex;
+    gap: 20px;
+    margin-right: 20px;
+}
+
+.nav-links a {
+    color: #ffffff;
+    text-decoration: none;
 }
 
 /* Mobile responsiveness fix */
@@ -63,7 +74,7 @@
 @media (max-width: 768px) {
     .navbar {
         flex-direction: column;
-        padding: 15px 0;
+        padding: 10px 0;
     }
     
     .nav-links {
@@ -71,7 +82,7 @@
         gap: 10px;
         margin: 10px 0;
     }
+}
 
-    .navbar-brand {
-        margin-bottom: 10px;
-    }
+/* Fix for hover states */
+.nav-links a:hover {
+    color: #ffc107;
+    transition: color 0.3s ease;
 }
